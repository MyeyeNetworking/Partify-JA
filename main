// Event Data Structure
interface Event {
  id: string;
  title: string;
  artist: string;
  category: string;
  location: string;
  city: string;
  date: string;
  price: number;
  image: string;
  description: string;
  venue: string;
  time: string;
  ticketsAvailable: number;
}

interface User {
  id: string;
  email: string;
  name: string;
  bookings: string[];
}

